<%= link_to "Add a new todo", new_todo_path %>

<ul class="todos">
	<% @todos.each do |todo| %>
		<li class = "<%= "completed" if todo.completed? %>">
			<%= todo.title %>
      <%if todo.completed?%>
        <%= button_to "Mark inComplete", todo_completion_path(todo[:id], 0), method: :delete %>
      <%else%>
        <%= button_to "Mark Complete", todo_completion_index_path(todo) %>
      <%end%>
		</li>
	<% end %>
</ul>